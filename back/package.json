  "dependencies": {
    "express": "^4.18.2",
    "typescript": "^4.9.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.15",
    "copy-files-from-to": "^3.6.0",
    "del-cli": "^5.0.0",
    "nodemon": "^2.0.20"
  }
}
